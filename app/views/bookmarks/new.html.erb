<h2>Add a movie to your <%= @list.name %> list</h2>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, prompt: "Select a movie", input_html: { data: { controller: "select" } } %>
  <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
  <%= f.submit class: 'btn btn-flat' %>
<% end %>

<p><%= link_to 'Return', list_path(@list) %></p>
